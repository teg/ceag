<ul>
    <% attachments.each do |a| %>
    <li><%= link_to a.name, :controller => 'vedlegg', :action => 'last_ned', :id => a.id %>
      <% if logged_in? %>
        <span class="button">[<%= link_to 'Slett', {:controller => 'vedlegg', :action => 'slett', :id => a}, :confirm => 'Er du sikker?', :post => true
         %>]</span>
      <% end %>
    </li>
    <% end %>
</ul>